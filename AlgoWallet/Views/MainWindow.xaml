              <TextBlock>8.</TextBlock>
            </StackPanel>
            <StackPanel>
              <TextBlock>9.</TextBlock>
            </StackPanel>
            <StackPanel>
              <TextBlock>10.</TextBlock>
            </StackPanel>
          </StackPanel>
          <StackPanel>
            <StackPanel>
              <TextBlock>11.</TextBlock>
            </StackPanel>
            <StackPanel>
              <TextBlock>12.</TextBlock>
            </StackPanel>
            <StackPanel>
              <TextBlock>13.</TextBlock>
            </StackPanel>
            <StackPanel>
              <TextBlock>14.</TextBlock>
            </StackPanel>
            <StackPanel>
              <TextBlock>15.</TextBlock>
            </StackPanel>
          </StackPanel>
          <StackPanel>
            <StackPanel>
              <TextBlock>16.</TextBlock>
            </StackPanel>
            <StackPanel>
              <TextBlock>17.</TextBlock>
            </StackPanel>
            <StackPanel>
              <TextBlock>18.</TextBlock>
            </StackPanel>
            <StackPanel>
              <TextBlock>19.</TextBlock>
            </StackPanel>
            <StackPanel>
              <TextBlock>20.</TextBlock>
            </StackPanel>
          </StackPanel>
          <StackPanel>
            <StackPanel>
              <TextBlock>21.</TextBlock>
            </StackPanel>
            <StackPanel>
              <TextBlock>22.</TextBlock>
            </StackPanel>
            <StackPanel>
              <TextBlock>23.</TextBlock>
            </StackPanel>
            <StackPanel>
              <TextBlock>24.</TextBlock>
            </StackPanel>
            <StackPanel>
              <TextBlock>25.</TextBlock>
            </StackPanel>
          </StackPanel>
        </StackPanel>
      </Border>
      <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Center" Margin="0 5 0 15">
        <TextBlock HorizontalAlignment="Left" Margin="0 10" Width="150">3. Choose a password:</TextBlock>
        <TextBox Width="400" FontSize="16" Height="22" HorizontalAlignment="Left" VerticalAlignment="Center" 
                 Margin="0" Padding="0" PasswordChar="*" Name="tb_walletPassword"></TextBox>
      </StackPanel>
      <StackPanel Orientation="Horizontal">
        <Button Classes="btn">Cancel</Button>
        <Button Classes="btn" Margin="100 0 0 0" Click="OnCreateWalletFinishClicked">Create Wallet</Button>
      </StackPanel>      
    </StackPanel>

    <StackPanel Name="sp_createAsset" IsVisible="False" Orientation="Vertical">
      <StackPanel Orientation="Horizontal">
        <TextBlock>Name:</TextBlock>
        <TextBox Name="tb_assetName"></TextBox>
        <TextBlock>Unit:</TextBlock>
        <TextBox Name="tb_unitName"></TextBox>
      </StackPanel>
      <StackPanel Orientation="Horizontal">
        <TextBlock>Total:</TextBlock>
        <TextBox Name="tb_assetTotal"></TextBox>
        <TextBlock>Frozen:</TextBlock>
        <CheckBox Name="cb_assetFrozen"></CheckBox>
      </StackPanel>
      <StackPanel Orientation="Horizontal">
        <TextBlock>URL:</TextBlock>
        <TextBox Name="tb_assetUrl"></TextBox>
      </StackPanel>
      <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
          <TextBlock>Manager Address:</TextBlock>
          <TextBox Name="tb_assetManager"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <TextBlock>Reserver Address:</TextBlock>
          <TextBox Name="tb_assetReserver"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <TextBlock>Clawbacker Address:</TextBlock>
          <TextBox Name="tb_assetClawbacker"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <TextBlock>Freezer Address:</TextBlock>
          <TextBox Name="tb_assetFreezer"></TextBox>
        </StackPanel>
      </StackPanel>
      <StackPanel Orientation="Horizontal">
        <Button>Cancle</Button>
        <Button Click="OnDoCreateAssetClick">Create</Button>
      </StackPanel>
    </StackPanel>

    <StackPanel Name="sp_enterPassword" IsVisible="False" Orientation="Vertical" 
                HorizontalAlignment="Center">
      <TextBlock Classes="h1" Margin="0 40 0 0">Enter The Password</TextBlock>
      <TextBlock Margin="150 20 0 0">Before you must enter a password of an account.</TextBlock>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 40 0 0">
        <ComboBox Width="100" Name="cb_accountList" SelectedIndex="0">
        </ComboBox>
        <TextBox Width="400" Name="tb_enterPassword" PasswordChar="*" FontWeight="16"></TextBox>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0 60 0 0">
        <Button Classes="btn" Click="OnCloseWindow">Close</Button>
        <Button Classes="btn" Click="OnPasswordEntered">OK</Button>
      </StackPanel>
    </StackPanel>
  </StackPanel>
</Window>
